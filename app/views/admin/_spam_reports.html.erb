<% @posts.each do |post| %>			
	<% if post.flaggings.with_flag(:spam).exists? %>
		<h3><%= link_to post.title, post%></h3>
		<p>
			<%= link_to "#{post.flaggings.with_flag(:spam).count} Reports", showPostsReporters_path(post), :method => :get %> |
			<%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete %>
		</p>					
		<hr />
	<% end %>								
<% end %>
<%= ajax_will_paginate @posts, :params => { :my_excluded_param => nil } %>	