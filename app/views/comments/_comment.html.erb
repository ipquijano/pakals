<div id="com-<%= comment.id %>">
<small><p>		    
	<strong><%= comment.user.name %> said:</strong> <br>
	<em><%= comment.comment %></em><br>
	<%= time_ago_in_words(comment.created_at) %> ago <br>
	<% if current_user %>
	<% if(current_user.id == comment.user_id)%>
		<%= link_to "Delete", comment, remote: true, :confirm => 'Are you sure?', :method => :delete  %>
	<% end %><% end %>		
</p></small>	
</div>