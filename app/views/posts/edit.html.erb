<div id="page">
	<div id="content">
		<div class="post">
			<h2 class="title"><a href="#">Update Post</a></h2>
			&nbsp;
			<div class="entry">
				<%= form_for @post do |f| %>
				<% if @post.errors.any? %>
					<h2>Errors</h2>
					<ul>
						<% @post.errors.full_messages.each do |message| %>
							<li><%= message %> </li>
						<% end %>
					</ul>
				<% end %>
				<p>
					<%= f.label :title %><br />
					<%= f.text_field :title %>
				</p>
				<p>
					<%= f.label :body %><br />
					<%= f.text_area :body %>
				</p>
				<p>
					<%= f.label "Town/City:" %>
					<%= f.select :town_from, 
					[
						['', ''],
