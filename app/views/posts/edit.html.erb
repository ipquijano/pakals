						['Barili', 'Barili'],
						['Bogo', 'Bogo'],
						['Boljoon', 'Boljoon'],
						['Borbon', 'Borbon'],
						['Carcar', 'Carcar'],					 
						['Carmen', 'Carmen'],
						['Catmon', 'Catmon'],
						['Cebu City', 'Cebu City'],
						['Compostela', 'Compostela'],
						['Consolacion', 'Consolacion'],
						['Cordova', 'Cordova'],
						['Daanbantayan', 'Daanbantayan'],
						['Dalaguete', 'Dalaguete'],
						['Danao City', 'Danao City'],
						['Dumanjug', 'Dumanjug'],
						['Ginatilan', 'Ginatilan'],
						['Lapu-Lapu City', 'Lapu-Lapu City'],
						['Liloan', 'Liloan'],
						['Madridejos', 'Madridejos'],
